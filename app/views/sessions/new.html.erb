<h1>Login</h1>
<% if flash[:alert] %>
  <h3 class="flash_message"><%= flash[:alert] %></h3>
<% end %>

<%= form_tag '/login' do %>

  <%= label_tag :username %>
  <%= text_field_tag :username %>
  <%= label_tag :password %>
  <%= password_field_tag :password %>

  <%= submit_tag "Login"  %>

<% end %>